<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#cac7c7"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="karataiev.dmytro.myappportfolio.MainActivity"
        tools:showIn="@layout/activity_main">


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:text="@string/title"
            android:textSize="@dimen/textTitle" />

        <Button
            android:id="@+id/popMovie"
            style="@style/myButton"
            android:text="@string/popMovie" />

        <Button
            android:id="@+id/alexandria"
            style="@style/myButton"
            android:text="@string/alexandria" />

        <Button
            android:id="@+id/football_scores"
            style="@style/myButton"
            android:text="@string/football_scores" />

        <Button
            android:id="@+id/buildIt"
            style="@style/myButton"
            android:text="@string/buildIt" />

        <Button
            android:id="@+id/material"
            style="@style/myButton"
            android:onClick="blankActivity"
            android:text="@string/material" />

        <Button
            android:id="@+id/ubiquitous"
            style="@style/myButton"
            android:onClick="blankActivity"
            android:text="@string/ubiquitos" />

        <Button
            android:id="@+id/earthquake"
            style="@style/myButton"
            android:onClick="blankActivity"
            android:text="@string/earthquake" />

    </LinearLayout>
</layout>