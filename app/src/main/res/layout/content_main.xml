<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="karataiev.dmytro.myappportfolio.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="#cac7c7">


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:text="@string/title"
            android:textSize="@dimen/textTitle" />

        <Button
            android:id="@+id/popMovie1"
            style="@style/myButton"
            android:onClick="blankActivity"
            android:text="@string/popMovie1" />

        <Button
            android:id="@+id/popMovie2"
            style="@style/myButton"
            android:onClick="blankActivity"
            android:text="@string/popMovie2" />

        <Button
            android:id="@+id/superDuo"
            style="@style/myButton"
            android:onClick="blankActivity"
            android:text="@string/superDuo" />

        <Button
            android:id="@+id/buildIt"
            style="@style/myButton"
            android:onClick="blankActivity"
            android:text="@string/buildIt" />

        <Button
            android:id="@+id/material"
            style="@style/myButton"
            android:onClick="blankActivity"
            android:text="@string/material" />

        <Button
            android:id="@+id/ubiquitous"
            style="@style/myButton"
            android:onClick="blankActivity"
            android:text="@string/ubiquitos" />

        <Button
            android:id="@+id/capstone1"
            style="@style/myButton"
            android:onClick="blankActivity"
            android:text="@string/capstone1" />

        <Button
            android:id="@+id/capstone2"
            style="@style/myButton"
            android:onClick="blankActivity"
            android:text="@string/capstone2" />
</LinearLayout>
